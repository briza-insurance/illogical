{
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "NodeNext",
    "target": "ES2021",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declarationDir": "types",
    "declaration": true,
    "isolatedModules": true
  },
  "testMatch": ["**/__test__/**/*.[jt]s?(x)"],
  "include": ["src"],
  "exclude": ["node_modules", "src/__test__", "src/**/*.test.ts"]
}
